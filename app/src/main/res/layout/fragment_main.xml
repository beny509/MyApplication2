<ScrollView   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:background="@drawable/head20151023110005">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/startMusic"
                android:layout_alignTop="@+id/stopMusic"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_expand_right" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/stopMusic"
                android:layout_toRightOf="@+id/startMusic"
                android:layout_toEndOf="@+id/startMusic"
                android:background="@drawable/ic_bg_hold_on"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startMusic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/main_G"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_row="0"
                android:layout_column="0"
                android:weightSum="1">

                <add.util.ButtonTextImg
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:text="New Button"
                    android:id="@+id/btn_devmap"
                    android:layout_gravity="center_horizontal"
                    myapp:myColor="#ffffff"
                    myapp:myText="地图"
                    android:background="@drawable/shape_red"
                    myapp:myImg="@drawable/ic_map"
                    myapp:myTextSize="25dp"
                    myapp:myHorV="V"
                    android:layout_margin="5dp" />

                <add.util.ButtonTextImg
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:text="New Button"
                    android:id="@+id/button5"
                    android:layout_gravity="center_horizontal"
                    myapp:myColor="#ffffff"
                    myapp:myText="单灯"
                    android:background="@drawable/shape_red"
                    myapp:myImg="@drawable/ic_single_control"
                    myapp:myTextSize="25dp"
                    myapp:myHorV="V"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_row="0"
                android:weightSum="1"
                android:orientation="vertical">

                <add.util.ButtonTextImg
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="New Button"
                    android:id="@+id/button2"
                    myapp:myColor="#ffffff"
                    myapp:myText="报警"
                    android:background="@drawable/shape_blue"
                    myapp:myImg="@drawable/ic_alarm"
                    myapp:myTextSize="25dp"
                    myapp:myHorV="H"
                    android:layout_margin="5dp" />

                <add.util.ButtonTextImg
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="New Button"
                    android:id="@+id/button3"
                    android:layout_weight="0.14"
                    android:layout_gravity="center_horizontal"
                    myapp:myColor="#ffffff"
                    myapp:myText="电参"
                    android:background="@drawable/shape_blue"
                    myapp:myImg="@drawable/ic_collect"
                    myapp:myTextSize="25dp"
                    myapp:myHorV="H"
                    android:layout_margin="5dp" />


                <add.util.ButtonTextImg android:layout_width="match_parent"
                    myapp:myHorV="H"
                    android:layout_height="180dp"
                    android:id="@+id/btn_onoff"
                    myapp:myColor="#ffffff"
                    myapp:myText="集中开关"
                    android:background="@drawable/shape"
                    myapp:myImg="@drawable/ic_multi_control"
                    myapp:myTextSize="25dp"
                    android:layout_margin="5dp" />
            </LinearLayout>

        </LinearLayout>

        <add.util.ButtonTextImg
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="New Button"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            myapp:myColor="#ffffff"
            myapp:myText="采集"
            android:background="@drawable/shape"
            myapp:myImg="@drawable/ic_maintenance"
            myapp:myTextSize="25dp"
            myapp:myHorV="H"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

        <add.util.ButtonTextImg
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/imageButton"
            myapp:myColor="#ffffff"
            myapp:myText="视频"
            android:background="@drawable/shape_orange"
            myapp:myImg="@drawable/ic_video"
            myapp:myTextSize="25dp"
            myapp:myHorV="H"
            android:layout_margin="5dp" />

    </LinearLayout>

</ScrollView  >
